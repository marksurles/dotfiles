#!/usr/bin/env bash
set -euo pipefail

DOTFILES_DIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" && pwd -P)"

# --- Link common dotfiles into $HOME ---
ln -sfn "$DOTFILES_DIR/.bash_aliases"   "$HOME/.bash_aliases"   2>/dev/null || true
ln -sfn "$DOTFILES_DIR/.gitconfig"      "$HOME/.gitconfig"      2>/dev/null || true
# add more dotfiles as needed

# --- Ensure ~/.bashrc loads aliases ---
touch "$HOME/.bashrc"
if ! grep -q 'DOTFILES_ALIASES' "$HOME/.bashrc"; then
  cat >> "$HOME/.bashrc" <<'RC'
# DOTFILES_ALIASES
[ -f "$HOME/.bash_aliases" ] && . "$HOME/.bash_aliases"
RC
fi

echo "Dotfiles install complete."
